    # for i in $git_found; do echo "$i"; done
    # echo "$git_found"
    # var="$ZET/${var:1:-1}"
    # head -1 < "$var"
# 
# }


if [[ $1 == "c" ]]; then
    date="$(date +"%Y%m%d%H%M%S")"
    folder="$ZET"/"$date"
    file="$folder/README.md"

    mkdir "$folder" &&
    touch "$file"
    if [[ $2 ]]; then
        printf "# %s" "$2" > "$file"
        fi
    vi "$file"
    
    ido_commit
elif [[ $1 == "st" ]]; then
    ido_status
elif [[ $1 == "ed" ]]; then
    ido_edit
exit; fi



