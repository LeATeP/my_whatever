#!/bin/bash


# curl -G https://api.github.com/search/code?q=sql%20is+repo:leatep/zet-notes 2>/dev/null | jq '.items | .[] | .path'

ido_commit () {
    read -r -p "Commit: " user_conf
    if [[ $user_conf == "y" ]]; then
        (cd "$ZET" &&
        git add ./"$date" &&
        git commit -m "add notes"
        git push 2> /dev/null &)
    fi
}

ido_status () {
    (cd "$ZET" &&
    git status)
}

ido_list () {
    # create 2 lists of string to show in select, and choice location.. 
    # loc[0] == words[0], and all i need is for loop by length 

    list=$(find "$ZET" -name README.md)
    # name["nice"]="qwe"
    # echo "${name["nice"]}"
    for i in $list; do
        printf "%s -------- %s\n" "$(head -1 < "$i")" "$i"
    done
}
ido_edit () {
    list=$(find "$ZET" -name README.md)
    # select i in "$list"; do
}
