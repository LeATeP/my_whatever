#!/bin/bash

ido_commit () {
    read -r -p "Commit: " user_conf
    if [[ $user_conf == "y" ]]; then
        (cd "$ZET" &&
        git add ./"$date" &&
        git commit -m "add notes"
        git push &> /dev/null &)
    fi
}

ido_commit_edit () {
    read -r -p "Commit: " user_conf
    if [[ $user_conf == "y" ]]; then
        (cd "$ZET" &&
        git add "$file_loc"
        git commit -a -m "add notes"
        git push &> /dev/null &)
    fi
}

ido_status () {
    (cd "$ZET" &&
    git status)
}

ido_edit () {
    location="$(find "$ZET" -name README.md)"
 
    oldIFS="$IFS"; IFS=$'\n'
    num=$"0"

    for i in $location; do
        txt="$(head -1 < "$i")"

        printf " -- %s. %s\n" "$num" "${txt:2}"
        loc+=("$i")
        num="$(echo "$num + 1" | bc)"

    done; IFS="$oldIFS"
    
    read -rp "Choice: " user_choice
    file_loc="${loc["$user_choice"]}"
    vi "$file_loc"

    ido_commit_edit
}

