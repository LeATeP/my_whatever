if [[ $1 == "c" ]]; then
    date="$(date +"%Y%m_%d_%H%M%S")"
    folder="$ZET"/"$date"
    file="$folder/README.md"

    mkdir "$folder" &&
    touch "$file"
    if [[ $2 ]]; then
        printf "# %s" "$2" > "$file"
        fi
    vi "$file"
    
    ido_commit
elif [[ $1 == "st" ]]; then
    ido_status
elif [[ $1 == "f" ]]; then
    ido_list
exit; fi



